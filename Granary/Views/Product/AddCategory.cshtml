@model Category

@{
    ViewData["Title"] = "Add Category";
}

@* Heading *@
<div class="row mb-2">
    <h5>Add Category</h5>
</div>

@* Input Form *@
<form asp-action="AddCategory" asp-controller="Product" method="post">
    <div class="row mb-3">
        <label asp-for="CategoryName" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Description" class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    @* Add and Cancel Buttons *@
    <div class="row mt-3">
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Add New Category</button>
        </div>
        <div class="col-auto">
            <a asp-action="Index" asp-controller="Product" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>
