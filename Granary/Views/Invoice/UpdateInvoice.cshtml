@*
 * ------------------------------------------------------------------------------
 * Module Name: Update Invoice View
 * Module Description: The view for updating an invoice. An invoice contains many
 * line items, each of which is an instance of the InvoiceProduct model.
 * ------------------------------------------------------------------------------
*@

@model Invoice
@{
    ViewData["Title"] = "Update Invoice";
}

@* Heading *@
<div class="row mb-2">
    <h5>Update Invoice #@Model.InvoiceNumber</h5>
</div>

@* Input Form*@
<form asp-action="UpdateInvoice" asp-controller="Invoice" method="post">
    <div class="row mb-3">
		<label asp-for="InvoiceProduct.Product" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="Invoice.InvoiceNumber" class="form-control" />
			<span asp-validation-for="Invoice.InvoiceNumber" class="text-danger"></span>
		</div>
    </div>

    
    @* Add and Cancel Buttons *@
    <div class="row mt-3">
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Add Invoice Item</button>
        </div>
        <div class="col-auto">
            <a asp-action="Index" asp-controller="Invoice" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>

