@*
 * ------------------------------------------------------------------------------
 * Module Name: Add Invoice Item View
 * Module Description: The view for updating an invoice. An invoice contains many
 * line items, each of which is an instance of the InvoiceProduct model.
 * ------------------------------------------------------------------------------
*@

@model AddInvoiceProductViewModel
@{
    ViewData["Title"] = "Update Invoice";
}

<div asp-validation-summary="All" class="text-danger"></div>

@* Heading *@
<div class="row mb-2">
    <h5>Update Invoice Number: @Model.Invoice.InvoiceNumber</h5>
    <p>InvoiceId: @Model.InvoiceProduct.InvoiceId</p>
    <p>Supplier: @Model.Invoice?.Supplier?.SupplierName</p>
</div>

@* PRODUCT SHOULD BE A DROPDOWN SELECTLIST WITH AUTOFILL *@
@* Input Form*@
<form asp-action="AddInvoiceProduct" asp-controller="Invoice" method="post">
    @* Hidden field for InvoiceId and SupplierName *@
    <input type="hidden" asp-for="InvoiceProduct.InvoiceId" />
    <div class="row mb-3">
        <label asp-for="InvoiceProduct.ProductId" class="col-sm-2 col-form-label">Product</label>
        <div class="col-sm-10">
            <select asp-for="InvoiceProduct.ProductId" class="form-select" asp-items="Model.Products">
                <option value="0">Select Product</option>
            </select>
            <span asp-validation-for="InvoiceProduct.ProductId" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="InvoiceProduct.UnitPrice" class="col-sm-2 col-form-label">Unit Price</label>
        <div class="col-sm-10">
            <input asp-for="InvoiceProduct.UnitPrice" class="form-control" />
            <span asp-validation-for="InvoiceProduct.UnitPrice" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="InvoiceProduct.Quantity" class="col-sm-2 col-form-label">Quantity</label>
        <div class="col-sm-10">
            <input asp-for="InvoiceProduct.Quantity" class="form-control" />
            <span asp-validation-for="InvoiceProduct.Quantity" class="text-danger"></span>
        </div>
    </div>
        
    @* Add and Cancel Buttons *@
    <div class="row mt-3">
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Add Invoice Item</button>
        </div>
        <div class="col-auto">
            <a asp-action="Index" asp-controller="Invoice" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>

