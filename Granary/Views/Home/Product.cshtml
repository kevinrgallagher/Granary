@*
 * ----------------------------------------------------------------------------
 * Module Name: Product Management View
 * Module Description: The view for displaying product types within the DB.
 * This view displays a list of products and their properties. From here, the 
 * user can add, delete, and modify products.
 * ----------------------------------------------------------------------------
*@

@model List<ProductViewModel>

@{
    ViewData["Title"] = "Product";
}

@* Heading *@
<div class="row mb-2">
    <h5>Product</h5>
</div>

<table class="table table-striped table-sm">
    <thead class="bg-dark text-white">
        <tr>
            <th>ProductID</th>
            <th>Name</th>
            <th>Category</th>

            <th>Description</th>
            <th>UnitType</th>
            <th>Stock Quantity</th>

            <th>UnitPrice</th>
            <th>Total Value</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.Name</td>
                <td>@product.CategoryName</td>

                <td>@product.Description</td>

                <td>@product.UnitType</td>
                <td>@product.FormattedStockQuantity</td>
                <td>@product.FormattedAverageUnitPrice</td>
                <td>@product.FormattedTotalValue</td>



            </tr>
        }
    </tbody>
</table>
<div class="row">
	<div class="col-md-12">
		<a asp-action="AddProduct" class="btn btn-primary" method="post">Add Product</a>
	</div>
</div>