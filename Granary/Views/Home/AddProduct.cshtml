@model AddProductViewModel
@{
    ViewData["Title"] = "Add Product";
}

@* Heading *@
<div class="row mb-2">
    <h5>Add Product</h5>
</div>

@* Input Form *@
<form asp-action="AddProduct" asp-controller="Home" method="post">
    <div class="row mb-3">
        <label asp-for="Product.ProductName" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input asp-for="Product.ProductName" class="form-control" />
            <span asp-validation-for="Product.ProductName" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Product.SupplierId" class="col-sm-2 col-form-label">Supplier</label>
        <div class="col-sm-10">
            <select asp-for="Product.SupplierId" class="form-select" asp-items="Model.Suppliers">
                <option value="0">Select Supplier</option>
            </select>
            <span asp-validation-for="Product.SupplierId" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Product.CategoryId" class="col-sm-2 col-form-label">Category</label>
        <div class="col-sm-10">
            <select asp-for="Product.CategoryId" class="form-select" asp-items="Model.Categories">
                <option value="0">Select Category</option>
            </select>
            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Product.UnitType" class="col-sm-2 col-form-label">Unit Type</label>
        <div class="col-sm-10">
            <select asp-for="Product.UnitType" class="form-select">
                <option value="0">Select Unit Type</option>
                <option value="1">Ounce</option>
				<option value="2">Pound</option>
				<option value="3">Gallon</option>
                <option value="4">Each</option>
            </select>
            <span asp-validation-for="Product.UnitType" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Product.StockQuantity" class="col-sm-2 col-form-label">Initial Quantity</label>
        <div class="col-sm-10">
            <input asp-for="Product.StockQuantity" class="form-control" />
            <span asp-validation-for="Product.StockQuantity" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Product.Description" class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
            <input asp-for="Product.Description" class="form-control" />
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>
    </div>

    @* Add and Cancel Buttons *@
    <div class="row mt-3">
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Add New Product</button>
        </div>
        <div class="col-auto">
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>
