@*
 * ----------------------------------------------------------------------------
 * Module Name: Add Product View
 * Module Description: The view for adding a product type. A product is either
 * an item purchased from a supplier or a product made by an employee. This
 * view allows the user to input a new product and save it to the database.
 * ----------------------------------------------------------------------------
*@

@model Product
@{
    ViewData["Title"] = "Add Product";
}

@* Heading *@
<div class="row mb-2">
    <h5>Add Product</h5>
</div>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })

@* Input Form*@
<form asp-action="AddProduct" asp-controller="Home" method="post">
    <div class="row mb-3">
        <label asp-for="ProductName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="CategoryId" class="col-sm-2 col-form-label">Category</label>
        <div class="col-sm-10">
            <select asp-for="CategoryId" class="form-select">
                <option value="">Select Category</option>
                <option value="1">Tomatoes</option>
                <option value="2">Mushrooms</option>
                <option value="3">Onions</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="UnitType" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="UnitType" class="form-select">
                <option value="">Select Unit Type</option>
                <option value="Ounce">Ounce</option>
                <option value="Pound">Pound</option>
                <option value="Gallon">Gallon</option>
                <option value="Each">Each</option>
            </select>
            <span asp-validation-for="UnitType" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="UnitPrice" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UnitPrice" class="form-control" />
            <span asp-validation-for="UnitPrice" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="StockQuantity" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="StockQuantity" class="form-control" />
            <span asp-validation-for="StockQuantity" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    @* Add and Cancel Buttons *@
    <div class="row mt-3">
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Add Product</button>
        </div>
        <div class="col-auto">
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>

