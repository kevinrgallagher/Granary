@model AddProductViewModel
@{
    ViewData["Title"] = "Add Product";
}

@* Heading *@
<div class="row mb-2">
    <h5>Add Product</h5>
</div>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@* Input Form *@
<form asp-action="AddProduct" asp-controller="Home" method="post">
    <div class="row mb-3">
        <label asp-for="Product.ProductName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Product.ProductName" class="form-control" />
            <span asp-validation-for="Product.ProductName" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Product.CategoryId" class="col-sm-2 col-form-label">Category</label>
        <div class="col-sm-10">
            <select asp-for="Product.CategoryId" class="form-select" asp-items="Model.Categories">
                <option value="0">Select Category</option>
            </select>
            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            <p>CategoryId bound: @Model.Product.CategoryId</p>

        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Product.UnitType" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Product.UnitType" class="form-select">
                <option value="">Select Unit Type</option>
                <option value="Ounce">Ounce</option>
                <option value="Pound">Pound</option>
                <option value="Gallon">Gallon</option>
                <option value="Each">Each</option>
            </select>
            <span asp-validation-for="Product.UnitType" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Product.UnitPrice" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Product.UnitPrice" class="form-control" />
            <span asp-validation-for="Product.UnitPrice" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Product.StockQuantity" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Product.StockQuantity" class="form-control" />
            <span asp-validation-for="Product.StockQuantity" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Product.Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Product.Description" class="form-control" />
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>
    </div>

    @* Add and Cancel Buttons *@
    <div class="row mt-3">
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Add Product</button>
        </div>
        <div class="col-auto">
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>
