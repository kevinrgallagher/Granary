@*
 * ----------------------------------------------------------------------------
 * Module Name: Add Invoice View
 * Module Description: The view for adding an invoice. An invoice contains many
 * line items, each of which is an instance of the InvoiceProduct model.
 * ----------------------------------------------------------------------------
*@

@model AddInvoiceViewModel
@{
    ViewData["Title"] = "Add Invoice";
}

@* Heading *@
<div class="row mb-2">
    <h5>Add Invoice</h5>
</div>

@* Input Form*@
<form asp-action="AddInvoice" asp-controller="Home" method="post">
        <div class="row mb-3">
		<label asp-for="Invoice.InvoiceNumber" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="Invoice.InvoiceNumber" class="form-control" />
			<span asp-validation-for="Invoice.InvoiceNumber" class="text-danger"></span>
		</div>
    </div>
    <div class="row mb-3">
        <label asp-for="Invoice.SupplierId" class="col-sm-2 col-form-label">Supplier</label>
        <div class="col-sm-10">
            <select asp-for="Invoice.SupplierId" class="form-select" asp-items="Model.Suppliers">
                <option value="0">Select Supplier</option>
            </select>
            <span asp-validation-for="Invoice.SupplierId" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Invoice.InvoiceDate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Invoice.InvoiceDate" class="form-control" type="date" />
            <span asp-validation-for="Invoice.InvoiceDate" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
		<label asp-for="Invoice.DueDate" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="Invoice.DueDate" class="form-control" type="date" />
			<span asp-validation-for="Invoice.DueDate" class="text-danger"></span>
		</div>
    </div>
    <div class="row mb-3">
		<label asp-for="Invoice.Status" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<select asp-for="Invoice.Status" class="form-select">
				<option value="">Select Status</option>
				<option value="Pending">Pending</option>
				<option value="Paid">Paid</option>
				<option value="Overdue">Overdue</option>
			</select>
			<span asp-validation-for="Invoice.Status" class="text-danger"></span>
		</div>
    </div>
    
    @* Add and Cancel Buttons *@
    <div class="row mt-3">
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Add Invoice</button>
        </div>
        <div class="col-auto">
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>

