@*
 * ----------------------------------------------------------------------------
 * Module Name: Add Recipe View
 * Module Description: The view for adding a recipe. A recipe can contain
 * zero or many products extant within the inventory. Different recipes can
 * have the same product.
 * ----------------------------------------------------------------------------
*@

@model Recipe
@{
    ViewData["Title"] = "Add Recipe";
}

@* Heading *@
<div class="row mb-2">
    <h5>Add Recipe</h5>
</div>

@* Input Form*@
<form asp-action="AddRecipe" asp-controller="Home" method="post">
    <div class="row mb-3">
        <label asp-for="RecipeName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RecipeName" class="form-control" />
            <span asp-validation-for="RecipeName" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    
    @* Add and Cancel Buttons *@
    <div class="row mt-3">
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Add Recipe</button>
        </div>
        <div class="col-auto">
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>

