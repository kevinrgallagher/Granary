@*
 * ----------------------------------------------------------------------------
 * Module Name: Recipe Management View
 * Module Description: The view for displaying recipes and their information.
 * From here, the user can add, delete, and modify recipes.
 * ----------------------------------------------------------------------------
*@

@model List<Recipe>

@{
    ViewData["Title"] = "Recipe";
}

@* Heading *@
<div class="row mb-2">
    <h5>Recipe</h5>
</div>

<table class="table table-striped table-sm">
    <thead class="bg-dark text-white">
        <tr>
            <th>RecipeId</th>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var recipe in Model)
        {
            <tr>
                <td>@recipe.RecipeId</td>
                <td>@recipe.RecipeName</td>
                <td>@recipe.Description</td>
            </tr>
        }
    </tbody>
</table>
<div class="row">
    <div class="col-md-12">
        <a asp-action="AddRecipe" class="btn btn-primary" method="post">Add Recipe</a>
    </div>
</div>